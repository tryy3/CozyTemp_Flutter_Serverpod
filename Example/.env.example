# ============================================
# SERVER CONFIGURATION
# ============================================
SERVER_ID=default
LOGGING_LEVEL=normal
SERVER_ROLE=monolith

# ============================================
# PORT CONFIGURATION (Host Ports)
# ============================================
API_PORT=8080
INSIGHTS_PORT=8081
WEB_PORT=8082
POSTGRES_PORT=5432
REDIS_PORT=6379

# ============================================
# PUBLIC FACING CONFIGURATION
# ============================================
# Change these to your actual domains for production
API_HOST=api.yourdomain.com
INSIGHTS_HOST=insights.yourdomain.com
WEB_HOST=app.yourdomain.com
PUBLIC_PORT=443
INSIGHTS_PUBLIC_PORT=443
WEB_PUBLIC_PORT=443
PUBLIC_SCHEME=https

# ============================================
# DATABASE CONFIGURATION
# ============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_THIS_TO_A_STRONG_PASSWORD
POSTGRES_DB=flutter_server
DB_REQUIRE_SSL=false

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_ENABLED=true
REDIS_PASSWORD=CHANGE_THIS_TO_A_STRONG_PASSWORD
REDIS_REQUIRE_SSL=false

# ============================================
# SERVERPOD SERVICE SECRET
# ============================================
# Generate a strong random secret for production
SERVICE_SECRET=CHANGE_THIS_TO_A_STRONG_SECRET

# ============================================
# OPTIONAL SETTINGS
# ============================================
MAX_REQUEST_SIZE=524288
SESSION_LOGS_PERSISTENT=true
SESSION_LOGS_CONSOLE=true
SESSION_LOGS_FORMAT=json
FUTURE_CALL_ENABLED=true

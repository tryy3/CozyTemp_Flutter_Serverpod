    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flutter",
            "type": "dart",
            "request": "launch",
            "program": "lib/main.dart"
        },
        {
            "name": "flutter_server_client",
            "cwd": "flutter_server_client",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "flutter_server_flutter (Local)",
            "cwd": "flutter_server_flutter",
            "request": "launch",
            "type": "dart",
            "args": [
                "--dart-define", "SERVER_URL=https://api.cozytemp.tryy3.dev/"
            ]
        },
        {
            "name": "flutter_server_flutter (Production)",
            "cwd": "flutter_server_flutter",
            "request": "launch",
            "type": "dart",
            "args": [
                "--dart-define", "SERVER_URL=https://api.cozytemp.tryy3.dev/"
            ]
        },
        {
            "name": "flutter_server_flutter (Widgetbook)",
            "cwd": "flutter_server_flutter/widgetbook",
            "request": "launch",
            "type": "dart",
        },
        {
            "name": "flutter_server_flutter (profile mode)",
            "cwd": "flutter_server_flutter",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "flutter_server_flutter (release mode)",
            "cwd": "flutter_server_flutter",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release",
            "env": {
                "SERVER_URL": "https://api.cozytemp.tryy3.dev"
            }
        },
        {
            "name": "flutter_server_server",
            "cwd": "flutter_server_server",
            "request": "launch",
            "type": "dart"
        }
    ]
